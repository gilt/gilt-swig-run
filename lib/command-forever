export GILT_ENV=development;
DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
FOREVER="$DIR/../node_modules/.bin/forever"
source ~/.nvm/nvm.sh;
nvm use 0.12;
node "$FOREVER" start -c "node --harmony --harmony-proxies $@" app.js -f
